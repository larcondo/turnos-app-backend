{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@constants/*": ["constants/*"],
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@queries/*": ["queries/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
    },
    /* Language and Environment */ 
    "target": "ES2022",
    /* Modules */
    "module": "CommonJS",
    "moduleResolution": "node",
    /* Emit */
    "outDir": "./build/",
    /* Interop Constraints */
    "esModuleInterop": true,
    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*.ts",
    "environment.d.ts"
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
}